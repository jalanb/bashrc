[user]
    name = J Alan Brogan
    email = github@al-got-rhythm.net
[mailmap]
    file = ~/mail.map
[credential]
    helper = store
[pager]
    diff =
[core]
    editor = vim
    excludesfile = ~/.gitignore_global
    trustctime = false
[alias]
    a = add
    b = branch
    c = cherry-pick
    cl = clean -d -f -f -x
    d = difftool -y --extcmd=\"icdiff --line-numbers\"
    e = rebase
    f = fetch
    h = rev-parse --abbrev-ref HEAD
    i = commit
    l = log --color=always --decorate --oneline --graph --abbrev-commit --date=relative --pretty=format:'%Cgreen%cr%Creset, %C(blue)%aN%Creset,%C(auto)%d%Creset %C(auto)%h \"%s\"'
    m = merge
    o = checkout
    p = push
    r = pull --rebase
    s = status
    t = tag
    w = show

    aa = add .
    ai = add --interactive
    aip = add --interactive --patch
    ap = add --patch

    ba = branch --all
    bac = branch --all --contains
    bb = switch
    bc = branch --contains
    bd = branch -d
    bD = branch -D
    bl = branch --list
    bm = branch -m
    bM = branch -M
    br = branch --remotes
    bp = branch --points-at
    bu = branch --unset-upstream

    cb = rev-parse --abbrev-ref HEAD
    ca = cherry-pick --abort
    ce = cherry-pick --edit
    cc = cherry-pick --continue
    cs = cherry-pick --skip
    cp = cherry-pick -x --allow-empty
    cq = cherry-pick --quit

    df = diff --name-only
    dh = difftool -y --extcmd=\"vim -d -o\"
    di = difftool -y --extcmd=\"icdiff --line-numbers\"
    dk = difftool -y -t Kaleidoscope
    dm = difftool -y --extcmd=\"~/bin/meld  \"
    dn = d --name-only
    dv = difftool -y --extcmd=\"vim -d -O\"
    dy = difftool -y --extcmd=\"pydiff\"
    dw = diff --word-diff
    dr = rerere diff
    ds = d --staged
    dy = difftool -y --extcmd=\"~/jab/bin/pydiff\"
    dis = di --staged
    dump = cat-file -p

    ea = rebase --abort
    ec = rebase --continue
    ei = rebase --interactive
    es = rebase --skip
    eq = rebase --quit
    eu = remote get-url origin

    fa = fetch --all
    fap = fetch --all --prune
    fg = fetch --tags
    ff = fetch --all --prune --tags

    ia = commit --amend
    ie = commit --edit
    ii = commit --interactive
    im = commit --message
    iip = commit --interactive --patch
    ip = commit --patch

    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short

    last = log -1 HEAD
    lc = log --color=always --decorate --oneline --graph --abbrev-commit --date=relative --pretty=format:'%h %an, %cr %d %s'
    ld = ll -p
    le = ll --pretty=format:'%C(auto)%h%Creset %C(blue)<%an %aE>, %Cgreen%cr %C(auto)%d%Creset %s'
    lf = lc --stat
    lg = l --grep
    ll = "!git l -n `$LINES / 2`"
    lll = l -16
    llll = l -8
    lllll = l -4
    llllll = l -2
    lllllll = l -1
    llllllll = log -n 1
    lllllllll = log -n 0
    lpppppp = lp -32
    lppppp = lp -16
    lpppp = lp -8
    lppp = lp -4
    lpp = lp -2
    lp = log --no-color --oneline --graph --abbrev-commit --date=relative --pretty=format:'%ci, %cN as %cE, %D %H \"%s\"'
    lm = l __main__^..
    lom = l origin/__main__^..
    lt = l --date=format-local:'%Y/%m/%d %H:%M' --pretty=format:'%Cgreen%cd%Creset, %C(blue)%aN%Creset,%C(auto)%d%Creset %C(auto)%h \"%s\"'
    ltt = l --pretty=format:'%Cgreen%ci %C(blue)%an, %C(auto)%d%Creset %C(auto)%h \"%s\"'

    ma = merge --abort
    mc = merge --continue
    mo = merge origin/__main__
    mm = merge --no-ff --no-edit
    mmo = mm -X ours
    mmt = mm -X theirs
    mm = merge --no-ff --no-edit -X theirs
    mq = merge --quit

    ob = checkout -b
    om = checkout __main__
    oo = restore

    pa =  push --atomic --all
    pf =  push --atomic --force-with-lease
    pff = push --atomic --force
    pod = push origin --delete
    pt =  push --tags
    pu =  push --set-upstream
    puu =  push --unset-upstream

    ru = remote get-url origin

    st = stash
    stp = stash pop
    stl = stash list --color=always --decorate --oneline --abbrev-commit --date=relative
    standup = log --branches --remotes --tags --no-merges --author="Alan" --since=\"$([[ Mon == $(date +%a) ]] && echo last friday || echo yesterday)\" --pretty=format:'%C(auto)%h%Creset %C(blue)%an, %Cgreen%cr %C(auto)%d%Creset %s %Creset'

    td = tag -d
    tf = fetch --tags
    tl = tag --list
    tp = push --tags

[push]
    default = simple
[help]
    autocorrect = 1
[advice]
    detachedHead = False
# See http://git-scm.com/book/en/v2/Git-Tools-Rerere
[rerere]
    enabled = true
[icdiff]
    options = --highlight --line-numbers
[mergetool "diffconflicts"]
    keepBackup = false
[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[merge]
    tool = diffconflicts
    conflictstyle = merge
[mergetool "splice"]
    cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
    trustExitCode = true
[mergetool "kdiff3"]
    path = "/usr/local/bin/kdiff3"
    trustExitCode = true
[mergetool "kdiffjab"]
    path = "~/jab/bin/mergetool"
    trustExitCode = true
[difftool "kdiff3"]
    path = "/Applications/kdiff3.app/Contents/MacOS/kdiff3 "
    trustExitCode = true
[mergetool "meld"]
    path = "/Applications/Meld.app/Contents/MacOS/Meld"
    trustExitCode = false
[color]
    ui = auto
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
