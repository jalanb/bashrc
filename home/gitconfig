[user]
    name = J Alan Brogan
    email = github@al-got-rhythm.net
[credential]
    helper = store
[pager]
    diff =
[core]
    editor = vim
    excludesfile = ~/.gitignore_global
    trustctime = false
[alias]
    a = add
    b = branch
    d = difftool -y --extcmd=\"icdiff \"
    e = pull --rebase
    f = push --force-with-lease
    h = rev-parse --abbrev-ref HEAD
    i = commit
    l = log --no-color --oneline --graph --abbrev-commit --date=relative --pretty=format:'%h %an, %cr %d %s'
    o = checkout
    p = push 
    r = rebase
    s = status
    t = remote get-url origin
    w = show
    ba = branch --all
    bc = branch --contains
    bac = branch --all --contains
    bd = branch -d
    bD = branch -D
    bl = branch --list
    bm = branch -m
    bM = branch -M
    br = branch --remotes
    bp = branch --points-at
    cb = rev-parse --abbrev-ref HEAD
    ci = commit
    co = checkout
    df = diff --name-only
    dh = difftool -y --extcmd=\"vim -d -o\"
    di = difftool -y --extcmd=\"icdiff --line-numbers\"
    dk = difftool -y -t Kaleidoscope
    dm = difftool -y --extcmd=\"~/bin/meld  \"
    dn = diff --name-only
    dv = difftool -y --extcmd=\"vim -d -O\"
    dy = difftool -y --extcmd=\"pydiff\"
    dw = diff --word-diff
    dr = rerere diff
    ds = diff --staged
    dy = difftool -y --extcmd=\"~/jab/bin/pydiff\"
    dump = cat-file -p
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    last = log -1 HEAD
    lc = l --color=always --decorate
    ld = lg -p
    le = lg --pretty=format:'%C(auto)%h%Creset %C(blue)<%an %aE>, %Cgreen%cr %C(auto)%d%Creset %s'
    lf = lg --stat
    lg = lc --pretty=format:'%C(auto)%h %C(blue)%an, %Cgreen%cd %C(auto)%d%Creset %s'
    ll = lg -2
    lll = lg -4
    llll = lg -8
    lllll = lg -16
    llllll = lg -32
    lm = log --pretty=format:'%C(auto)%s%Creset'
    lt = lg --pretty=format:'%C(auto)%h %C(blue)%an, %Cgreen%ci %C(auto)%d%Creset %s'
    mo = merge origin/__main__
    pa =  push --all
    pf =  push --atomic --force-with-lease
    pff = push --atomic --force
    pt =  push --tags
    pu =  push -u
    puu =  push --unset-upstream
    ra = rebase --abort
    rc = rebase --continue
    ri = rebase --interactive
    rs = rebase --skip
    rq = rebase --quit
    st = status
    standup = log --branches --remotes --tags --no-merges --author="Alan" --since=\"$([[ Mon == $(date +%a) ]] && echo last friday || echo yesterday)\" --pretty=format:'%C(auto)%h%Creset %C(blue)%an, %Cgreen%cr %C(auto)%d%Creset %s %Creset'
[push]
    default = simple
[help]
    autocorrect = 1
# See http://git-scm.com/book/en/v2/Git-Tools-Rerere
[rerere]
    enabled = true
[icdiff]
    options = --highlight --line-numbers
[advice]
    detachedHead = False
[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[merge]
    tool = diffconflicts
    conflictstyle = merge
[mergetool "splice"]
    cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
    trustExitCode = true
[mergetool "kdiff3"]
    path = "/usr/local/bin/kdiff3"
    trustExitCode = true
[mergetool "kdiffjab"]
    path = "~/jab/bin/mergetool"
    trustExitCode = true
[difftool "kdiff3"]
    path = "/Applications/kdiff3.app/Contents/MacOS/kdiff3 "
    trustExitCode = true
[mergetool "meld"]
    path = "/Applications/Meld.app/Contents/MacOS/Meld"
    trustExitCode = false
[mergetool "diffconflicts"]
    keepBackup = false
[color]
    ui = auto
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
