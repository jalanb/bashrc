    trustctime = false
[alias]
    a = add
    b = branch
    c = cherry-pick
    cl = clean -d -f -f -x
    d = difftool -y --extcmd=\"icdiff \"
    e = pull --rebase
    f = fetch
    h = rev-parse --abbrev-ref HEAD
    i = commit
    l = log --color=always --decorate --oneline --graph --abbrev-commit --date=relative --pretty=format:'%Cgreen%cr%Creset, %C(blue)%aN%Creset,%C(auto)%d%Creset %C(auto)%h \"%s\"'
    m = merge
    o = checkout
    p = push
    r = rebase
    s = status
    t = remote get-url origin
    w = show
    ai = add --interactive
    aip = add --interactive --patch
    aa = add .
    ap = add --patch
    ba = branch --all
    bb = switch
    bc = branch --contains
    bac = branch --all --contains
    bd = branch -d
    bD = branch -D
    bl = branch --list
    bm = branch -m
    bM = branch -M
    br = branch --remotes
    bp = branch --points-at
    cb = rev-parse --abbrev-ref HEAD
    ca = cherry-pick --abort
    ce = cherry-pick --edit
    cc = cherry-pick --continue
    cs = cherry-pick --skip
    cq = cherry-pick --quit
    df = diff --name-only
    dh = difftool -y --extcmd=\"vim -d -o\"
    di = difftool -y --extcmd=\"icdiff --line-numbers\"
    dk = difftool -y -t Kaleidoscope
    dm = difftool -y --extcmd=\"~/bin/meld  \"
    dn = diff --name-only
    dv = difftool -y --extcmd=\"vim -d -O\"
    dy = difftool -y --extcmd=\"pydiff\"
    dw = diff --word-diff
    dr = rerere diff
    ds = diff --staged
    dy = difftool -y --extcmd=\"~/jab/bin/pydiff\"
    dump = cat-file -p
    fa = fetch --all 
    fap = fa --prune
    ff = fap --tags
    ft = fetch --tags
    ia = commit --amend
    ie = commit --edit
    ii = commit --interactive
    iip = commit --interactive --patch
    ip = commit --patch
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    last = log -1 HEAD
    lc = log --color=always --decorate --oneline --graph --abbrev-commit --date=relative --pretty=format:'%h %an, %cr %d %s'
    ld = ll -p
    le = ll --pretty=format:'%C(auto)%h%Creset %C(blue)<%an %aE>, %Cgreen%cr %C(auto)%d%Creset %s'
    lf = ll --stat
    lg = l --grep
    ll = l -2
    lll = l -4
    llll = l -8
    lllll = l -16
    llllll = l -32
    lpppppp = lp -32
    lppppp = lp -16
    lpppp = lp -8
    lppp = lp -4
    lpp = lp -2
    lp = log --no-color --oneline --graph --abbrev-commit --date=relative --pretty=format:'%ci, %cN as %cE, %D %H \"%s\"'
    lm = l __main__^..
    lt = lp --pretty=format:'%C(auto)%h %C(blue)%an, %Cgreen%ci %C(auto)%d%Creset %s'
    ma = merge --abort
    mc = merge --continue
    mo = merge origin/__main__
    mm = merge --no-ff --no-edit
    mmo = mm -X ours
    mmt = mm -X theirs
    mm = merge --no-ff --no-edit -X theirs
    mq = merge --quit
    pa =  push --atomic --all
    pf =  push --atomic --force-with-lease
    pff = push --atomic --force
    pt =  push --tags
    pu =  push -u
    puu =  push --unset-upstream
    ra = rebase --abort
    rc = rebase --continue
    ri = rebase --interactive
    rs = rebase --skip
    rq = rebase --quit
    st = status
    standup = log --branches --remotes --tags --no-merges --author="Alan" --since=\"$([[ Mon == $(date +%a) ]] && echo last friday || echo yesterday)\" --pretty=format:'%C(auto)%h%Creset %C(blue)%an, %Cgreen%cr %C(auto)%d%Creset %s %Creset'
[push]
    default = simple
[help]
    autocorrect = 1
[advice]
    detachedHead = False
# See http://git-scm.com/book/en/v2/Git-Tools-Rerere
[rerere]
    enabled = true
[icdiff]
    options = --highlight --line-numbers
[mergetool "diffconflicts"]
    keepBackup = false
[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[merge]
    tool = diffconflicts
    conflictstyle = merge
[mergetool "splice"]
    cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
    trustExitCode = true
[mergetool "kdiff3"]
    path = "/usr/local/bin/kdiff3"
    trustExitCode = true
[mergetool "kdiffjab"]
    path = "~/jab/bin/mergetool"
    trustExitCode = true
[difftool "kdiff3"]
    path = "/Applications/kdiff3.app/Contents/MacOS/kdiff3 "
    trustExitCode = true
[mergetool "meld"]
    path = "/Applications/Meld.app/Contents/MacOS/Meld"
    trustExitCode = false
[color]
    ui = auto
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
