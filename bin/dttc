#! /bin/bash

. ~/hub/whyp/whyp.sh
. ~/jab/src/bash/functons.sh
whyp_source ~/jalanb/local/functons.sh optional

_find_copier () {
    CLIP_BOARD_COPIER=
    for possible in xsel pbcopy; do
        CLIP_BOARD_COPIER=$(which $possible 2>/dev/null)
        if [[ -n $CLIP_BOARD_COPIER ]]; then
            return 0
        fi
    done
    return 1
}

show_word () {
    if [[ -z $1 ]]; then
        _dttc
    else
        case "$1" in 
            "1") _mlaw;;
            "2") _lism;;
            "g") _gttc;;
        esac
    fi
}

copy_word () {
    show_word "$@"  | $CLIP_BOARD_COPIER
}

usage () {
    echo "z: dig"
    echo "  1: work"
    echo "  2: home"
    echo "  3: tosh"
}

main () {
    if [[ $1 =~ .h ]]; then
        usage
        return 0
    fi
    if ! _find_copier; then
        echo "No clipboard program available" >&2
        show_word $1
        return 1
    fi
    if [[ $1 =~ .n ]]; then
        copy_word 2 
        num
        return 0
    fi
    if [[ $1 =~ .s ]]; then
        shift
        show_word $1
    fi
    copy_word $1 
    return 0
}

# set -x
main "$@"
# set +x
